.featured__container
    display: flex
    flex-direction: row
    width: 100%
    justify-content: space-around
    align-items: flex-start

.featured__col
    tile()
    display: flex
    flex-direction: column
    border: 4px solid white
    height: 70%
    padding: .5em
    margin: .5em
    flex: 1

    .base__title
        text-align: center

    .material-icons
        align-self: center
        font-size: 150px
