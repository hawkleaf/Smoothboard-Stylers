.productIndex__container
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    justify-content: flex-start
    margin-top: 1em

.productIndex__item
    tile()
    fancyHover()
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    padding: .5em
    margin-top: 1em
    img
        height: 250px
        width: 250px
        border-radius: 50%
        border: 4px solid black
        backface-visibility: hidden
    &:hover
        h3
            text-decoration: underline
