.productIndex__container
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    justify-content: flex-start
    margin-top: 1em
    min-height: 100%

.productIndex__item
    tile()
    fancyHover()
    display: flex
    flex-direction: column
    align-items: center
    width: 20%
    min-height: 300px
    padding: .5em
    margin-top: 1em
    img
        height: 200px
        width: 200px
        border-radius: 50%
        border: 4px solid black
        backface-visibility: hidden
    &:hover
        h3
            text-decoration: underline
